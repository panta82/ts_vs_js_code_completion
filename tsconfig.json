{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "./dist",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": [
		"./src/**/*"
	]
}